@import 'common/var.styl'
@import 'mixin/center.styl'
@import 'mixin/ellipsis.styl'
@import 'mixin/border.styl'

$filter-arrow-size = 5px
$title-height = 44px
.xm-filter
  position fixed
  z-index: $z-index['dialog']
  top $header-height
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .6)

  &__title
    display flex
    align-items center
    height $title-height
    background-color $white
    position relative
    &:after
      border-retina()
  &__cell
    width 33.33333%
    position relative
    text-align center
    padding 0 $padding-x
    display flex
    align-items center
    &.is-active
      color $primary
      .arrow
        transform rotate(-180deg)
        border-top-color $primary
  &__text
    ellipsis()

  &__panel
    padding 0 $padding-x
    background-color $white
    max-height 70%
    overflow hidden
    overflow-y auto
  // &__mask
  //   position absolute
  //   top $header-height
  //   left 0
  //   width 100%
  //   height 100%
  //   background-color rgba(0, 0, 0, .6)
  &__item
    position relative
    padding 15px 0
    &:after
      border-retina()
    .xm-checkbox
      right 0
      center-y()
  &__row
    padding-right 53px
    ellipsis()

.arrow
  width 0
  height 0
  border-left $filter-arrow-size solid transparent
  border-right $filter-arrow-size solid transparent
  border-top $filter-arrow-size solid $gray-dark
  margin-left 4px
  transition transform .2s
