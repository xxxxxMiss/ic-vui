@import 'common/var'
@import 'mixin/center.styl'

$caret-color = #FF6644
$size = large medium small
$sizes = {
  large: {
    height: 45px,
    padding: 0 15px
    fontSize: 16px
  },
  medium: {
    height: 40px,
    padding: 0 20px
    fontSize: 14px
  },
  small: {
    height: 32px,
    padding: 0 15px,
    fontSize: 13px
  }
}

.xm-input
  &__inner
    position relative
  &__input
    outline none
    -webkit-appearance none
    background-color #F5F5F8
    border 1px solid @background-color
    color $black
    font-weight 500
    width 100%
    border-radius 4px
    // caret-color $caret-color // 待定，该属性兼容性目前不是很好
  &__input[type=search]::-webkit-search-cancel-button
    -webkit-appearance none
  &__input::-webkit-input-placeholder
    color #999

  for val in $size
    &--{val} &__input
      height: $sizes[val]['height']
      padding: $sizes[val]['padding']
      font-size: $sizes[val]['fontSize']

  &--suffix .icon-suffix
    center-y()
    right 15px
    font-size 20px
  &--suffix &__input
      padding-right 50px

  &--prefix .icon-prefix
    center-y()
    left 15px
  &--prefix &__input
      padding-left 45px

  &--round &__input
    border-radius 16px

  &--timer &__input
    padding-right 94px
  &--timer .xm-btn--timer
    center-y()


