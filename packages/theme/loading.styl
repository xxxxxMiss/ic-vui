@import 'common/var.styl'

.xm-loading
  position fixed
  z-index: $z-index['loading']
  left 0
  top 0
  width 100%
  height 100%
  background-color transparent
  &__inner
    display flex
    flex-direction column
    align-items center
    text-align center
    position absolute
    left 50%
    top 50%
    transform translate3d(-50%, -50%, 0)
    user-select none
    padding 20px
    border-radius 4px
    background-color rgba(0, 0, 0, .6)
    color $white
  &__text
    padding-top 10px
