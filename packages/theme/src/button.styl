@import 'common/var'

$colors = {
  primary: $primary,
  success: $success,
  info: $info,
  danger: $danger,
  warning: $warning
}

+prefix-classes($prefix-classes)
  .btn
    position relative
    display inline-block
    text-align center
    outline none
    border 0
    -webkit-appearance none
    user-select none
    border-radius $border-radius
    &:after
      content ''
      position absolute
      left 0
      top 0
      width 200%
      height 200%
      border $border
      transform scale(.5)
      transform-origin left top
      border-radius inherit

    &--text:after
      display none

    &__text
      display flex
      align-items center
      justify-content center
      padding 0 5px

    &--prefix-icon
      margin-right 5px
    &--suffix-icon
      margin-left 5px

    &--default
      background-color $white
      color $black
      &:after
        border $border
      &:active
        background-color darken($white, 10%)
      &[disabled]
        background-color darken($white, 10%)
        color #999

    for key, value in $colors
      &--{key}
        background-color value
        color $white
        &:after
          border none
        &:active, &[disabled]
          background-color: lighten(value, 62%)

    &--large
      padding 12px 24px

    &--normal
      padding 8px 15px

    &--small
      padding 4px 8px

    &--mini
      padding 2px 4px

    &--round
      border-radius $round = 16px
      &:after
        border-radius $round * 2

    &--block
      width 100%
      height 50px
      font-size $font-size-medium

    &--fixed
      position fixed
      left 0
      bottom 0
      width 100%
      border-radius 0
      height 50px
      font-size 17px

