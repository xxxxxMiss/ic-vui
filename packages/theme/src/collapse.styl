@import 'common/var'
@import 'mixin/border'
@import 'mixin/ellipsis'
@import 'mixin/center'

+prefix-classes($prefix-classes)
  .collapse
    &__item
      background-color $white
      margin-bottom 10px

    &__header
      display flex
      align-items center
      position relative
      padding-bottom 15px
      margin 0 $padding-x
      &:after
        border-retina()
    &__inner
      flex 7
    &__title
      font-size $font-size-large
      font-weight 600
      padding-top 15px
      ellipsis()
    &__subtitle
      font-size $font-size-base
      font-weight 400
      padding-top 10px

    &__weathercock
      flex 2
      text-align right
      .icon
        display inline-block
        font-size 12px
        color $gray-dark
        transition transform .2s
      ^[0]__item--active .icon
        transform rotate(-180deg)

    &__panel
      padding 20px $padding-x 0

.collapse-enter-active
  animation collapse-fade-in .2s
.collapse-leave-active
  animation collapse-fade-out .2s

@keyframes collapse-fade-in
  0%
    transform: translate3d(0, -20px, 0)
    opacity: 0
  100%
    transform: translate3d(0, 0, 0)
    opacity: 1

@keyframes collapse-fade-out
  0%
    transform: translate3d(0, 0, 0)
    opacity: 1
  100%
    transform: translate3d(0, -20px, 0)
    opacity: 0
