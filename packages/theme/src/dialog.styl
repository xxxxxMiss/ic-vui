@import 'common/var'
@import 'mixin/center'

+prefix-classes($prefix-classes)
  .dialog
    position fixed
    z-index: $z-index['dialog']
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .6)

    &__wrapper
      position relative
      top 50%
      margin 0 auto
      background-color $white
      overflow hidden

    &--round &__wrapper
      padding-top 10px
      border-radius 8px

    &__header
      height $header-height

    &__content
      padding 0 $padding-x

    &__footer
      height $footer-height
      line-height $footer-height
      padding 0 $padding-x
      text-align right
