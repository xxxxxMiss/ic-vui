@import 'common/var'
@import 'mixin/center'

+prefix-classes($prefix-classes)
  .dialog
    position fixed
    z-index: $z-index['dialog']
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .6)

    &__wrapper
      position relative
      top 50%
      margin 0 auto
      background-color $white
      overflow hidden

    &--round &__wrapper
      border-radius 8px

    &__header
      position relative
      display flex
      align-items center
      justify-content center
      height $header-height
      padding 0 $padding-x
      font-size $font-size-xlarge
      font-weight bold
      text-align center
      i
        position absolute
        left $padding-x
      &--left-close i
        left $padding-x

    &__content
      padding 0 $padding-x

    &__footer
      position absolute
      left 0
      bottom 0
      width 100%
      padding $padding-x
      text-align right
