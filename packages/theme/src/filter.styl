@import 'common/var'
@import 'mixin/center'
@import 'mixin/ellipsis'
@import 'mixin/border'

$filter-arrow-size = 5px
$title-height = 44px
+prefix-classes($prefix-classes)
  .filter
    position fixed
    z-index: $z-index['dialog']
    left 0
    background-color rgba(0, 0, 0, .4)
    width 100%
    height 100%
    &__panel
      padding 0 $padding-x
      background-color $white
      max-height 70%
      overflow hidden
      overflow-y auto
    &__item
      position relative
      padding 13px 0
      font-size 17px
      &:after
        border-retina()
      .icon
        padding-right 21px

    &__checkbox
      display none
      position absolute
      right 0
      center-y()

    &__row
      padding-right 53px
      ellipsis()
      &--active
        color $primary

