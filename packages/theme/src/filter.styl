@import 'common/var'
@import 'mixin/center'
@import 'mixin/ellipsis'
@import 'mixin/border'

$filter-arrow-size = 5px
$title-height = 44px
+prefix-classes($prefix-classes)
  .filter
    &__panel
      padding 0 $padding-x
      background-color $white
      max-height 70%
      overflow hidden
      overflow-y auto
    &__item
      position relative
      padding 9px 0
      &:after
        border-retina()

    &__checkbox
      display none
      position absolute
      right 0
      center-y()

    &__row
      padding-right 53px
      ellipsis()

