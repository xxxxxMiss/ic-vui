@import 'common/var'
@import 'mixin/ellipsis'
@import 'mixin/border'
@import 'mixin/center'

+prefix-classes($prefix-classes)
  .header
    position absolute
    z-index: $z-index['header']
    left 0
    top 0
    width 100%
    background-color $white
    height $header-height
    line-height $header-height
    padding 0 $padding-x
    &--divider:after
      border-retina($gray-average-dark)

    &__left
      center-y()
      max-width 65px
      min-width 40px
      display flex
      align-items center

    &__title
      margin 0 80px
      font-size $font-size-xlarge
      font-weight bold
      text-align center
      ellipsis()

    &__right
      center-y()
      right $padding-x
      max-width 65px
      display flex
      justify-content flex-end
      align-items center
      text-align right
      font-size $font-size-medium

    .icon
      font-size $font-size-xlarge
      padding 3px 0
    .icon + .icon
      margin-left 25px
