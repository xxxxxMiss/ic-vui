@import 'common/var'
@import 'mixin/center'

+prefix-classes($prefix-classes)
  .loading
    position fixed
    z-index: $z-index['loading']
    left 0
    top 0
    width 100%
    height 100%
    background-color transparent
    &__inner
      display flex
      flex-direction column
      align-items center
      text-align center
      center()
      user-select none
      padding 20px
      border-radius 4px
      background-color rgba(0, 0, 0, .6)
      color $white
    &__text
      padding-top 10px

.loading-fade-enter-active
  animation: loading-fade-in .3s
.loading-fade-leave-active
  animation: loading-fade-out .3s
@keyframes loading-fade-in
  0%
    opacity: 0
  100%
    opacity: 1
@keyframes loading-fade-out
  0%
    opacity: 1
  100%
    opacity: 0
