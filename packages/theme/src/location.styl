@import 'common/var'
@import 'mixin/center'

$touched-rect
  min-width 80px
  line-height @min-width
  height @min-width
  border-radius 4px
  padding 0 10px

+prefix-classes($prefix-classes)
  .location
    position absolute
    left 0
    width 100%
    height 100%
    background-color $white

    &__content
      position absolute
      z-index: $z-index['dialog']
      top 0
      left 0
      height 100%
      width 100%
      background-color #F5F5F8
      overflow hidden
      overflow-y auto
      padding 0 $padding-x
      padding-bottom 54px
      font-size $font-size-base
    .btn
      font-size $font-size-base

    &__title
      padding 14px 0 24px
      font-weight 500
      span
        display inline-block
        width 30px
        height 20px
        line-height 20px
        background-color $primary
        border-radius 20px
        color $white
        text-align center
        font-size $font-size-small

    &__icon-title
      display flex
      align-items center
      padding 14px 0 24px
      font-weight 500
    .icon
      color $primary
      padding-right 5px

    &__bar
      center-y()
      right 0
      z-index: $z-index['dialog']
      &--active
        background-color rgba(0, 0, 0, .2)
    &__letter
      padding 4px 7px
      font-size $font-size-small
      text-align center
      .icon
        padding-right 0
        color $gray-dark

    &__touched
      center()
      z-index: $z-index['dialog']
      background-color rgba(0, 0, 0, .4)
      color $white
      font-size 40px
      text-align center
      &--rect
        @extends $touched-rect
        width 80px
      &--round
        @extends $touched-rect
        border-radius 50%

    .btn
      margin-right 14px
      margin-bottom 16px

.touched-fade-enter-active
.touched-fade-leave-active
  transition all .2s ease
.touched-fade-enter
.touched-fade-leave-to
  opacity 0
