@import 'common/var'
@import 'mixin/center'
@import 'mixin/border'

+prefix-classes($prefix-classes)
  .modal
    position absolute
    z-index: $z-index['modal']
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .4)

    &__inner
      center()
      margin 0 auto
      background-color $white
      border-radius 8px
      padding 30px
      width 92%
      overflow hidden

    &__title
      position relative
      font-size $font-size-large
      font-weight 500
      color $black
    &__close
      position absolute
      right 18px
      top 13px

    &__content
      margin 35px auto 45px

    &__footer
      text-align right
      .btn + .btn
        margin-left 12px

    &--center
      ^[0]__header
      ^[0]__content
      ^[0]__footer
        text-align center

    &--ghost
      ../../__header
        position relative
        padding-bottom 30px
        &:after
          border-retina()
      ../../__footer
        display none

    .input
      padding-top 15px
    .input__input
      background-color $white
      border 1px solid #ccc

    .btn
      padding 8px 43px


.modal-fade-enter-active
  animation: modal-fade-in .3s
.modal-fade-leave-active
  animation: modal-fade-out .3s

@keyframes modal-fade-in
  0%
    transform: translate3d(0, -20px, 0)
    opacity: 0
  100%
    transform: translate3d(0, 0, 0)
    opacity: 1

@keyframes modal-fade-out
  0%
    transform: translate3d(0, 0, 0)
    opacity: 1
  100%
    transform: translate3d(0, -20px, 0)
    opacity: 0

