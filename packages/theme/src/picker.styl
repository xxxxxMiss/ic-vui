@import 'common/var'
@import 'mixin/border'
@import 'mixin/center'

$picker-item-height = 36px

+prefix-classes($prefix-classes)
  .picker
    // height 200px
    &__wrapper
      position relative
      display flex
      align-items center
      overflow hidden
      perspective 1200px
      height 100%

    &__column
      transform-style preserve-3d

    &__item
      // height $picker-item-height
      // line-height @height

    &__highlight
      position absolute
      width 100%
      left 0
      top 50%
      height $picker-item-height
      margin-top -($picker-item-height / 2)
      pointer-events none
      &:before
        border-retina()
        top 0
      &:after
        border-retina()
