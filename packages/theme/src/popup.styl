@import 'common/var'

+prefix-classes($prefix-classes)
  .popup
    &__content
      position absolute
      z-index: $z-index['popup']
      left 0
      max-height 60%
      bottom -100%
      width 100%
      overflow hidden
      overflow-y auto
      background-color $white
      transition bottom .3s

    &__backdrop
      position absolute
      z-index: ($z-index['popup'] - 1)
      top 100%
      left 0
      height 100%
      width 100%
      background-color rgba(0, 0, 0, .4)

    &--visible &__content
      bottom 0
    &--visible &__backdrop
      top 0
