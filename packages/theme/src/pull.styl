@import 'common/var'

+prefix-classes($prefix-classes)
  .pull
    display flex
    flex-direction column
    height 100%

    &__scroller
      flex 1
      overflow-y auto
      -webkit-overflow-scrolling touch

    &__action-block
      position relative
      width 100%

    &__default-text
      height 100%
      line-height 50px
      text-align center

    &__loading
      display flex
      justify-content center
      align-items center
      position absolute
      width 100%
      left 0
      height 50px
      bottom -50px
      text-align center
      .spinner__inner
        width 23px
        height @width
    &__text
      padding-left 10px
    &__load-arrow
      position relative
      top 5px
      width 0
      height 0
      color $gray-dark
      border-left 6px solid transparent
      border-right 6px solid transparent
      border-top 8px solid currentColor
      transition transform .2s
      &:after
        content ''
        position absolute
        left 50%
        width 2px
        margin-left -(@width / 2)
        height 12px
        top -(@height + @border-top)
        background-color currentColor
      &--rotate
        transform rotate(-180deg)
        top -5px

.{$prefix-classes}pull .glyph__success
  background-color $gray-dark

