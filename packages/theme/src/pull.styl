@import 'common/var'

+prefix-classes($prefix-classes)
  .pull
    position absolute
    top 0
    left 0
    bottom 0
    width 100%
    background-color $white
    overflow hidden

    &__wrapper
      height 100%
      transition transform .3s

    &__scroller
      height 100%
      overflow hidden
      overflow-y auto

    &__loading
      display flex
      justify-content center
      align-items center
      position absolute
      width 100%
      left 0
      height 50px
      bottom -50px
      text-align center
      .spinner__inner
        width 23px
        height @width
    &__text
      padding-left 10px
    &__load-arrow
      position relative
      top 5px
      width 0
      height 0
      color $gray-dark
      border-left 6px solid transparent
      border-right 6px solid transparent
      border-top 8px solid currentColor
      transition transform .2s
      &:after
        content ''
        position absolute
        left 50%
        width 2px
        margin-left -(@width / 2)
        height 12px
        top -(@height + @border-top)
        background-color currentColor
      &--rotate
        transform rotate(-180deg)
        top -5px

.{$prefix-classes}pull .glyph__success
  background-color $gray-dark

