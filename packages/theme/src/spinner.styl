@import 'common/var'

$size = 16px
+prefix-classes($prefix-classes)
  .spinner
    &__inner
      position relative
      display inline-block
      width $size * 2
      height $size * 2

    &--circle &__inner
      border 5px solid $gray-light
      border-left-color transparent
      border-radius 50%
      animation rotate-infinite .8s infinite linear

    &--default &__inner
      position relative
      width 30px
      height 30px
      color $gray-dark
      animation rotate-infinite .8s linear infinite
      animation-timing-function: steps(12)
      & i
        position absolute
        width 100%
        height 100%
        left 0
        top 0
      & i:before
        content ''
        display block
        margin 0 auto
        width 2px
        height 25%
        border-radius 40%
        background-color currentColor
      for $i in 1..12
        & i:nth-of-type({$i})
          opacity (1 - (0.75 / 12) * ($i - 1))
          transform rotate($i * 30deg)

    &--crash-ball
      ^[0]--top, ^[0]--right, ^[0]--bottom, ^[0]--left
        position absolute
        display inline-block
        width $size
        height $size
        border-radius 50%
      ^[0]--top
        top 0
        left 0
        background-color $primary
        animation spinner-top 1s infinite
        animation-direction alternate
        animation-fill-mode both
        animation-timing-function linear
      ^[0]--right
        right 0
        top 0
        background-color $danger
        animation spinner-right 1s infinite
        animation-direction alternate
        animation-fill-mode both
        animation-timing-function linear
      ^[0]--bottom
        bottom 0
        right 0
        background-color $warning
        animation spinner-bottom 1s infinite
        animation-direction alternate
        animation-fill-mode both
        animation-timing-function linear
      ^[0]--left
        bottom 0
        left 0
        background-color $success
        animation spinner-left 1s infinite
        animation-direction alternate
        animation-fill-mode both
        animation-timing-function linear

@keyframes spinner-top
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d($size, $size, 0)
@keyframes spinner-right
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d(-($size), $size, 0)
@keyframes spinner-bottom
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d(-($size), -($size), 0)
@keyframes spinner-left
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d($size, -($size), 0)

@keyframes rotate-infinite
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
