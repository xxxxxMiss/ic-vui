@import 'common/var'

$size = 16px
$directions = (top spinner-top) (right spinner-right) (bottom spinner-bottom) (left spinner-left)
+prefix-classes($prefix-classes)
  .spinner
    display inline-block
    &__inner
      position relative
      display inline-block
      width $size * 2
      height $size * 2

    &--circle &__inner
      border 5px solid $gray-light
      border-left-color transparent
      border-radius 50%
      animation rotate-infinite .8s infinite linear

    &--default &__inner
      position relative
      width 30px
      height 30px
      color $gray-dark
      animation rotate-infinite .8s linear infinite
      animation-timing-function: steps(12)
      & i
        position absolute
        width 100%
        height 100%
        left 0
        top 0
      & i:before
        content ''
        display block
        margin 0 auto
        width 2px
        height 25%
        border-radius 40%
        background-color currentColor
      for $i in 1..12
        & i:nth-of-type({$i})
          opacity (1 - (0.75 / 12) * ($i - 1))
          transform rotate($i * 30deg)

    &--crash-ball
      for val in $directions
        ^[0]--{val[0]}
          position absolute
          {val[0]} 0
          display inline-block
          width $size
          height $size
          border-radius 50%
          animation val[1] 1s infinite
          animation-direction alternate
          animation-fill-mode both
          animation-timing-function linear
      ^[0]--top
        left 0
        background-color $primary
      ^[0]--right
        top 0
        background-color $danger
      ^[0]--bottom
        right 0
        background-color $warning
      ^[0]--left
        bottom 0
        background-color $success

@keyframes spinner-top
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d($size, $size, 0)
@keyframes spinner-right
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d(-($size), $size, 0)
@keyframes spinner-bottom
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d(-($size), -($size), 0)
@keyframes spinner-left
  from
    transform translate3d(0, 0, 0)
  to
    transform translate3d($size, -($size), 0)

@keyframes rotate-infinite
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
