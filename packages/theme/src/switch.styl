@import 'common/var'
@import 'mixin/border'

.demo-switch
  padding 20px 0
+prefix-classes($prefix-classes)
  .switch
    display inline-block
    width 48px
    height 24px
    line-height 22px
    border-radius 24px
    vertical-align middle
    border 1px solid #ccc;
    background-color #ccc;
    position relative
    cursor pointer
    user-select none
    transition all 0.2s ease-in out
    &:after
      content ''
      width 20px
      height 20px
      border-radius 20px
      background-color #fff
      cursor pointer
      position absolute
      top 1px
      left 1px
      transition left 0.2s ease-in-out, width 0.2s ease-in-out
    &:active:after
      width 26px
    &:focus
      box-shadow 0 0 0 2px fade(#f64, 20%)
      outline 0
    &-inner
      color #fff
      font-size 12px
      position absolute
      left 25px
    &-checked
      background-color #ff6644
      border-color #f64
      &:after
        left 25px
      &:active:after
        left 18px
      .switch-inner
        left 8px
    &-disabled
      background-color darken($white, 10%)
      border-color darken($white, 10%)
      &:after {
        background #ccc
        cursor not-allowed
      }
      .switch-inner {
        color #ccc
      }
    &-large
      width 60px
      .switch-inner
        left 30px
      &.switch-checked
        &:after
          left 37px
        .switch-inner
          left 8px
        &:active:after
          left 31px
    &-small
      width 24px
      height 12px
      line-height: 10px
      font-size 10px
      &:after
        width 10px
        height 10px
        top 0
        left 0
      &:active:after
        width 14px
      .switch-inner
        left 10px
      &.switch-checked
        &:after
          left 12px
        .switch-inner
          left 2px
        &:active:after
          left 8px


    
