@import 'common/var'
@import 'mixin/border'
@import 'mixin/ellipsis'

$title-height = 48px
+prefix-classes($prefix-classes)
  .tab
    &__inner
      position relative
      display flex
      align-items center
      justify-content center
      overflow hidden
    &--divider &__inner
      &:after
        border-retina()

    &__cursor
      position absolute
      bottom 0
      width 120px
      height 4px
      background-color $primary
      border-radius 4px

    &__item
      position relative
      height $title-height
      line-height @height
      text-align center
      font-size $font-size-medium
      width 124px
      padding 0 $padding-x
      color $gray-dark
      &--active
        color $primary
        font-weight bold

    &--disperse &__item:after
      content ''
      position absolute
      width 100%
      left 0
      bottom 0
      height 4px
      background-color $primary
      border-radius 4px
      transform scale(0)
      transition transform .2s
    &--disperse &__item--active:after
      transform scale(1)

    &__title
      display flex
      align-items center
      height $title-height
      background-color $white
      position relative
      &:after
        border-retina()

    &__panel
      display none
      &--active
        display block
