@import 'common/var'
@import 'mixin/border'
@import 'mixin/ellipsis'

$filter-arrow-size = 5px
$title-height = 44px
+prefix-classes($prefix-classes)
  .tab
    &__inner
      position relative
      display flex
      align-items center
      justify-content center
      overflow hidden
      padding 0 $padding-x
    &--divider &__inner
      &:after
        border-retina()

    &__cursor
      position absolute
      bottom 0
      width 120px
      height 4px
      background-color $primary
      border-radius 4px

    &__item
      position relative
      flex 1
      height $title-height
      line-height @height
      text-align center
      font-size $font-size-medium
      &--active
        color $primary
        font-weight bold

    &--disperse &__item:after
      content ''
      position absolute
      width 100%
      left 0
      bottom 0
      height 4px
      background-color $primary
      border-radius 4px
      transform scale(0)
      transition transform .2s
    &--disperse &__item--active:after
      transform scale(1)

    &--filter &__item--active
      color $primary
      .arrow
        transform rotate(-180deg)
        border-top-color $primary

    &--filter &__item
      text-align center
      display flex
      justify-content center
      align-items center
      font-size $font-size-base

    &--filter &__text
      ellipsis()

    &__panel
      display none
      &--active
        display block

    &__title
      display flex
      align-items center
      height $title-height
      background-color $white
      position relative
      &:after
        border-retina()
  .arrow
    width 0
    height 0
    border-left $filter-arrow-size solid transparent
    border-right $filter-arrow-size solid transparent
    border-top $filter-arrow-size solid $gray-dark
    margin-left 4px
    transition transform .2s
