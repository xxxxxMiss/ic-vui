@import 'common/var'
@import 'mixin/border'

.{$prefix-classes}tabbar a
  display block
  text-decoration none
  color $gray-dark

+prefix-classes($prefix-classes)
  .tabbar
    position absolute
    display flex
    z-index: $z-index['tabbar']
    left 0
    bottom 0
    width 100%
    height 50px
    background-color $white
    color $gray-dark
    justify-content center
    align-items center
    transition color .2s
    line-height 1
    &:before
      border-retina-top($gray-average-dark)

    .icon
      font-size 27px
      color $gray-average

    &__item
      flex 1
      text-align center
      &--active
        a, .icon
          color $primary

    &__text
      padding-top 2px
      font-size $font-size-small
