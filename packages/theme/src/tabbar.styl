@import 'common/var'

.{$prefix-classes}tabbar a
  display block
  text-decoration none
  color $gray-dark

+prefix-classes($prefix-classes)
  .tabbar
    display flex
    position fixed
    z-index: $z-index['tabbar']
    left 0
    bottom 0
    width 100%
    height 50px
    background-color $white
    color $gray-dark
    justify-content center
    align-items center
    transition color .2s
    border-top: 1px solid rgba(0,0,0,0.10)

    .icon
      font-size 27px
      color $gray-dark

    &__item
      flex 1
      text-align center
      &--active
        a, .icon
          color $primary

    &__text
      padding-top 2px
      font-size $font-size-small

