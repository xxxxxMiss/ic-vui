@import 'common/var'

+prefix-classes($prefix-classes)
  .timeline
    &__item
      display flex
      padding-bottom 26px
    &--last &__item:last-child ^[0]__progress:before
      border-left 0

    &__progress
      position relative
      margin-right 12px
      color #d2d2d2
      &:before
        content ''
        position absolute
        height 100%
        top ($circle + 10)
        left ($circle / 2)
        border-left-width 1px
        border-left-color currentColor

      &--dashed
        &:before
          border-left-style dashed
      &--solid
        &:before
          border-left-style solid

    &__content
      flex 1

    &__header
      display flex
      align-items center
      padding 30px 0
      font-size $font-size-medium
    &__title
      padding-left 10px
    & .icon
      color $primary
      font-size $font-size-xlarge
