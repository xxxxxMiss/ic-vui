@import 'common/var'

+prefix-classes($prefix-classes)
  .toast
    display flex
    justify-content center
    align-items center
    flex-direction column
    text-align center
    user-select none
    position fixed
    z-index: $z-index['toast']
    left 50%
    transform translateX(-50%)
    max-width 80%
    border-radius 10px
    background-color rgba(0, 0, 0, .6)
    color $white
    padding 13px 20px
    line-height 1.5

    & .icon
      margin-bottom 10px
      font-size 40px
    &--middle
      top 50%
      transform translate3d(-50%, -50%, 0)
    &--top
      top 10%
    &--bottom
      bottom 10%
    &--icon
      padding 30px 15px

.toast-fade-enter, .toast-fade-leave-to
  opacity 0
.toast-fade-enter-active, .toast-fade-leave-active
  transition: all .3s ease
