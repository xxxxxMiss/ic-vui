@import 'common/var'

+prefix-classes($prefix-classes)
  .upload
    position relative
    display inline-block
    width 80px
    line-height @width
    height @width
    overflow hidden
    &__wrapper
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 2
      text-align center
      pointer-events none
    input[type=file]
      position absolute
      left 0
      top 0
      z-index 1
      width 100%
      height 100%
      opacity 0
    img
      max-width 100%
