@import 'common/var.styl'
@import 'mixin/border.styl'

.xm-tab
  &__inner
    position relative
    display flex
    align-items center
    oveflow hidden
    &:after
      border-retina()

  &__item
    flex 1
    padding 12px 10px
    &--active
      color $primary

  &__panel
    display none
    &--active
      display block
