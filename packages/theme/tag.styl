@import 'common/var.styl'
@import 'mixin/ellipsis.styl'

$presets-dark = {
  primary: $primary,
  success: $success,
  warning: $warning,
  danger: $danger,
  info: $info
}
$presets-light = {
  red: #FF6644,
  blue: #3B99FF,
  cyan: #11AABB
}

.xm-tag
  position relative
  display inline-block
  margin-right 5px
  max-width 100px
  ellipsis()

  &:after
    content: ''
    position absolute
    left 0
    top 0
    width 200%
    height 200%
    transform-origin 0 0
    transform scale(.5)

  for key, val in $presets-dark
    ^[0]--{key}
      background-color val
      color $white
      &:after
        border 1px solid val

  for key, val in $presets-light
    ^[0]--{key}
      background-color lighten(val, 90%)
      color val

  &--normal
    height 20px
    line-height 20px
    text-align center
    padding 0 6px
    font-size 13px
    border-radius 2px
  &--large
    height 30px
    line-height 30px
    padding 0 12px
    border-radius 5px
    border $border
    background-color $white
    color $black
    font-size 14px
    &:after
      display none
